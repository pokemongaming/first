<button onclick="calculate()">Calculate Difficulty</button>

<div class="meter">
  <div id="fill"></div>
</div>

<div id="label">Difficulty: —</div>
<div id="text"></div>

<div class="seo">
This advanced raid difficulty meter calculates difficulty using raid tier,
number of players, weather boost, friendship bonus, and boss moveset.
Actual raid results may vary depending on counters, dodging, and trainer levels.
</div>

</div>
</div>

<script>
function calculate(){
  let tier=document.getElementById("tier").value;
  let players=parseInt(document.getElementById("players").value);
  let weather=document.getElementById("weather").value;
  let friendship=document.getElementById("friendship").value;
  let moveset=document.getElementById("moveset").value;

  let score=0;

  if(tier==="3")score=25;
  if(tier==="5")score=55;
  if(tier==="mega")score=65;
  if(tier==="gigantamax")score=80;

  score+=(6-players)*10;

  if(weather==="boosted")score-=10;

  if(friendship==="good")score-=3;
  if(friendship==="great")score-=6;
  if(friendship==="ultra")score-=10;
  if(friendship==="best")score-=15;

  if(moveset==="normal")score+=5;
  if(moveset==="hard")score+=12;

  if(score<10)score=10;
  if(score>100)score=100;

  let diff="Easy";
  let txt="This raid is accessible for most trainers.";

  if(score>=40){
    diff="Medium";
    txt="Requires solid counters and coordination.";
  }
  if(score>=60){
    diff="Hard";
    txt="Strong counters and experienced players recommended.";
  }
  if(score>=80){
    diff="Extreme";
    txt="Only top counters, maxed Pokémon, and teamwork can succeed.";
  }

  document.getElementById("fill").style.width=score+"%";
  document.getElementById("label").innerText="Difficulty: "+diff;
  document.getElementById("text").innerText=txt;
}
</script>

